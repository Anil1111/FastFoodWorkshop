@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="ffw-text-brown text-center titleMargin">@ViewData["Title"]</h2>
<h4 class="ffw-text-brown text-center titleMargin">Associate your @Model.LoginProvider account.</h4>

<div class="formDiv">
    <div class="container-fluid col-mt-1">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" class="mx-auto w-50" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="d-flex justify-content-center">
                <div class="form-group col-md-12">
                    <label asp-for="Input.Email" class="ffw-text-brown">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-default custom-btn">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

