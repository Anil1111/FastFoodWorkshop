@page
@model FastFoodWorkshop.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="ffw-text-brown text-center titleMargin">@ViewData["Title"]</h2>
<div class="formDiv">
    <div class="w-50 mx-auto mt-4">
        <section>
            <form asp-route-returnUrl="@Model.ReturnUrl" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="d-flex justify-content-between">
                    <div class="form-group width-size">
                        <label asp-for="Input.FirstName" class="ffw-text-brown"></label>
                        <input asp-for="Input.FirstName" class="form-control" value="" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group width-size">
                        <label asp-for="Input.LastName" class="ffw-text-brown"></label>
                        <input asp-for="Input.LastName" class="form-control" value="" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="form-group width-size">
                        <label asp-for="Input.Username" class="ffw-text-brown"></label>
                        <input asp-for="Input.Username" class="form-control" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group width-size">
                        <label asp-for="Input.Address" class="ffw-text-brown"></label>
                        <input asp-for="Input.Address" class="form-control" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="form-group width-size">
                        <label asp-for="Input.DateOfBirth" class="ffw-text-brown"></label>
                        <input asp-for="Input.DateOfBirth" class="form-control" />
                        <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                    </div>
                    <div class="form-group width-size">
                        <label asp-for="Input.Email" class="ffw-text-brown"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <div class="form-group width-size">
                        <label asp-for="Input.Password" class="ffw-text-brown"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group width-size">
                        <label asp-for="Input.ConfirmPassword" class="ffw-text-brown"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="form-group">
                        <label asp-for="Input.Picture">Upload Picture</label>
                        <input asp-for="Input.Picture" type="file" class="form-control-file" name="Picture">
                        <span asp-validation-for="Input.Picture" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-default custom-btn">Register</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
