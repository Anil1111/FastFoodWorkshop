@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h2 class="ffw-text-white text-center">@ViewData["Title"]</h2>
<hr class="hr-size" />
<div class="w-50 mx-auto mt-4">
    <section>
        <form method="post">
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <label asp-for="Input.Username" class="ffw-text-white"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <label asp-for="Input.Password" class="ffw-text-white"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="ffw-text-white">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a style="color:white" asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
            <div class="d-flex justify-content-center">
                <a style="color:white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </div>
        </form>
    </section>
</div>

<div class="container-fluid">
    <section>
        <form asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <p>
                @foreach (var provider in Model.ExternalLogins)
                {
                    <h2 class="ffw-text-white text-center">Login with @provider.DisplayName</h2>
                    <hr class="hr-size ffw-color-white" />
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-default" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                    </div>
                }
            </p>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
