@model FastFoodWorkshop.ServiceModels.Applicant.ApplicantCvInputModel
@{
    ViewData["Title"] = "Join Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="ffw-text-brown text-center titleMargin">@ViewData["Title"]</h2>
<div class="formDiv">
    <div class="w-50 mx-auto mt-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Applicant" asp-action="JoinUs">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="d-flex justify-content-between">
                <div class="form-group width-size">
                    <label asp-for="ApplicantFirstName" class="ffw-text-brown">Applicant Firstname</label>
                    <input asp-for="ApplicantFirstName" class="form-control" placeholder="Applicant Firstname" />
                    <span asp-validation-for="ApplicantFirstName" class="text-danger"></span>
                </div>
                <div class="form-group width-size">
                    <label asp-for="ApplicantLastName" class="ffw-text-brown">Applicant Lastname</label>
                    <input asp-for="ApplicantLastName" class="form-control" placeholder="Applicant Lastname" />
                    <span asp-validation-for="ApplicantLastName" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-group width-size">
                    <label asp-for="Email" class="ffw-text-brown">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group width-size">
                    <label asp-for="BirthDate" class="ffw-text-brown">Birth Date</label>
                    <input type="date" asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
            </div>
            <div class="align-self-center">
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="ffw-text-brown">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="align-self-center">
                <div class="form-group">
                    <label asp-for="Address" class="ffw-text-brown">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <div class="align-self-center">
                <div class="form-group">
                    <label asp-for="MotivationalLetter" class="ffw-text-brown">Motivational Letter</label>
                    <textarea asp-for="MotivationalLetter" class="form-control" rows="3" placeholder="Motivational Letter"></textarea>
                    <span asp-validation-for="MotivationalLetter" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <div class="form-group">
                    <label asp-for="Picture">Upload Picture</label>
                    <input type="file" class="form-control-file" name="Picture">
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-default custom-btn">Submit</button>
            </div>
        </form>
    </div>
</div>



